{
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "labels": ["feature", "enhancement", "feat"]
    },
    {
      "title": "## ğŸ› Bug Fixes",
      "labels": ["fix", "bugfix", "bug"]
    },
    {
      "title": "## ğŸ§° Maintenance",
      "labels": ["chore", "maintenance", "refactor"]
    },
    {
      "title": "## ğŸ“ Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## ğŸ§ª Tests",
      "labels": ["test", "tests"]
    },
    {
      "title": "## ğŸ”§ Build/CI",
      "labels": ["build", "ci"]
    },
    {
      "title": "## â¬†ï¸ Dependencies",
      "labels": ["dependencies", "deps"]
    }
  ],
  "ignore_labels": ["ignore"],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n## ğŸ”— Full Commit History\n\n${{COMMITS}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "commit_template": "- ${{SUBJECT}} (${{COMMIT}})",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature|enhancement)(\\([\\w\\s-]+\\))?:\\s.+",
      "target": "feature"
    },
    {
      "pattern": "^fix(\\([\\w\\s-]+\\))?:\\s.+",
      "target": "fix"
    },
    {
      "pattern": "^docs(\\([\\w\\s-]+\\))?:\\s.+",
      "target": "documentation"
    },
    {
      "pattern": "^test(s)?(\\([\\w\\s-]+\\))?:\\s.+",
      "target": "test"
    },
    {
      "pattern": "^chore(\\([\\w\\s-]+\\))?:\\s.+",
      "target": "chore"
    },
    {
      "pattern": "^build(\\([\\w\\s-]+\\))?:\\s.+",
      "target": "build"
    },
    {
      "pattern": "^ci(\\([\\w\\s-]+\\))?:\\s.+",
      "target": "ci"
    },
    {
      "pattern": "^refactor(\\([\\w\\s-]+\\))?:\\s.+",
      "target": "refactor"
    }
  ],
  "transformers": [
    {
      "pattern": "^feat(\\([\\w\\s-]+\\))?:\\s(.+)$",
      "target": "- $2"
    },
    {
      "pattern": "^fix(\\([\\w\\s-]+\\))?:\\s(.+)$",
      "target": "- $2"
    },
    {
      "pattern": "^docs(\\([\\w\\s-]+\\))?:\\s(.+)$",
      "target": "- $2"
    },
    {
      "pattern": "^chore(\\([\\w\\s-]+\\))?:\\s(.+)$",
      "target": "- $2"
    },
    {
      "pattern": "^test(s)?(\\([\\w\\s-]+\\))?:\\s(.+)$",
      "target": "- $3"
    },
    {
      "pattern": "^build(\\([\\w\\s-]+\\))?:\\s(.+)$",
      "target": "- $2"
    },
    {
      "pattern": "^ci(\\([\\w\\s-]+\\))?:\\s(.+)$",
      "target": "- $2"
    },
    {
      "pattern": "^refactor(\\([\\w\\s-]+\\))?:\\s(.+)$",
      "target": "- $2"
    }
  ],
  "trim_values": true,
  "exclude_merge_commits": true
}
